<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ice Cream</title>
    <link rel="stylesheet" href="styles/styles.css">
    <script src="js/icecream.js" defer></script>
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="//cdn.datatables.net/2.3.4/js/dataTables.min.js"></script>

    <!-- Favicon -->
    <link rel="icon" href="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSoKHnXPENvCGbSh39wRXLH3ZS24CSY1w32TA&s">
</head>
<body>
    <h1>Admin Page</h1>
        <table id = "order-table" class = "display">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>flavor</th>
                    <th>cone</th>
                    <th>toppings</th>
                    <th>commment</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach(order => { %>
                    <tr>
                        <td><%= order.fname %><%= order.lname %></td>
                        <td><%= order.email %></td>
                        <td><%= order.flavor %></td>
                        <td><%= order.method %></td>
                        <td><%= order.toppings %></td>
                        <td><%= order.comment %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <main>
    <script defer>
        let table = new DataTable('#order-table');
    </script>
</body>
</html>